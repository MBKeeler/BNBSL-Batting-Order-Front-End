{{#each players as |player|}}

  <!-- -->
{{#if player}}

  <table style="width:55%">
    <thead>
        <th>Player ID</th>
        <th>First Name</th>
        <th>Last Name </th>
        <th>Team</th>
        <th>Program</th>
        <th>Notes</th>
        <th>Position</th>
        <th>Batting Position</th>
        <th>Batting Avg</th>
    </thead>
    <tbody>
        <tr bgcolor="#cd9966" data-id="{{player.id}}">
            <td>{{player.id}}</td>
            <td>{{player.first_name}}</td>
            <td>{{player.last_name}}</td>
            <td>{{player.team}}</td>
            <td>{{player.program}}</td>
            <td>{{player.notes}}</td>
            <td>{{player.position}}</td>
            <td>{{player.batting_position}}</td>
            <td>{{player.batting_avg}}</td>
            <td><button id="deleteBttn" value="{{player.id}}" name='delete' type='click'>Delete Player</button></td>
        </tr>
  </table>
{{else}}
    There are no players on record for this user.
{{/if}}

{{/each}}
